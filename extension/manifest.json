{
  "manifest_version": 3,
  "name": "Productivity Time Tracker",
  "version": "1.0",
  "description": "Tracks time spent on websites",
  "permissions": ["tabs"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
